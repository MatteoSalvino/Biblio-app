<resources>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorBackground">@color/app_background</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:textColor">@color/preferences_text</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/main_book_text</item>
        <item name="hintTextColor">@color/main_book_text</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NirmalaStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/nirmala</item>
    </style>
</resources>
