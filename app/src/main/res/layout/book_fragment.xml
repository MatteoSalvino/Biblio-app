<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:padding="10dp"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/main_book_cover"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_margin="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Title"
                android:layout_marginTop="10dp"
                android:textColor="@color/mainBookTextColor"/>

            <TextView
                android:id="@+id/main_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Author"
                android:textColor="@color/mainBookTextColor"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/main_book_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="2008"
                android:textColor="@color/mainBookTextColor"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/main_book_pages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Pages : "
                android:textColor="@color/mainBookTextColor"
                android:layout_marginTop="5dp"/>

            <!---
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_book_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_star_24"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>
            -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/main_download_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="#558B2F"
                    android:text="Add to My Books"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/main_remove_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="#C62828"
                    android:text="Remove from My Books"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/main_book_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc_sample"
        android:textColor="@color/mainBookTextColor"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:maxLines="14"
        android:scrollbars="vertical"/>
</LinearLayout>