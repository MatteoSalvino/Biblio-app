<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/appbar"
        layout="@layout/ebook_details_fragment_appbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/header"
                layout="@layout/ebook_details_fragment_header"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginVertical="16dp" />

            <include
                android:id="@+id/infos"
                layout="@layout/ebook_details_fragment_infos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/main_download_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/add_button"
                    android:text="@string/add_to_my_books_msg"
                    android:textColor="@color/main_book_text"
                    android:visibility="visible" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/main_remove_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/add_button"
                    android:text="@string/remove_from_my_books_msg"
                    android:textColor="@color/main_book_text"
                    android:visibility="invisible" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/item_decorator"
                android:tint="@color/main_book_text" />

            <TextView
                android:id="@+id/main_book_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:maxLines="14"
                android:padding="10dp"
                android:text="@string/no_description"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                tools:text="@string/desc_sample" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/item_decorator"
                android:tint="@color/main_book_text" />

            <TextView
                android:id="@+id/main_book_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                android:textColor="@color/main_book_text"
                android:textStyle="italic"
                tools:text="by Feedbooks" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
