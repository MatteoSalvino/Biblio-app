<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/main_book_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/null_field_placeholder"
        android:textColor="@color/main_book_text"
        tools:text="13 January 2015" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/item_decorator"
        android:tint="@color/main_book_text" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/book_open_page_variant"
        android:tint="@color/main_book_text" />

    <TextView
        android:id="@+id/main_book_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/null_field_placeholder"
        android:textColor="@color/main_book_text"
        tools:text="450" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/item_decorator"
        android:tint="@color/main_book_text" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_language_24"
        android:tint="@color/main_book_text" />

    <TextView
        android:id="@+id/main_book_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/null_field_placeholder"
        android:textAllCaps="true"
        android:textColor="@color/main_book_text"
        tools:text="lang" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/item_decorator"
        android:tint="@color/main_book_text" />

    <TextView
        android:id="@+id/main_book_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/null_field_placeholder"
        android:textColor="@color/main_book_text"
        android:textStyle="bold"
        tools:text="1Mb" />
</LinearLayout>
