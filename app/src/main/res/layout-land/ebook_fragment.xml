<?xml version="1.0" encoding="utf-8"?>

<!--TODO: properly implement this landscape layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:padding="10dp"
        android:src="@drawable/baseline_arrow_back_ios_24" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_book_cover"
                    android:layout_width="150dp"
                    android:layout_height="250dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/ebook_cover_description" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/main_book_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        tools:text="@string/title_field"
                        android:textColor="@color/main_book_text"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/main_book_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        tools:text="@string/author_field"
                        android:textColor="@color/main_book_text"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/main_book_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        tools:text="@string/year_field_placeholder"
                        android:textColor="@color/main_book_text"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/main_book_pages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/pages_field"
                        android:textColor="@color/main_book_text"
                        android:textSize="15sp" />

                    <!---
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/main_book_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textSize="13sp"
                            android:layout_marginTop="5dp"
                            android:textColor="#000"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_star_24"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="2dp"/>
                    </LinearLayout>
                    -->

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!--TODO: improve buttons UI -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/main_download_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:text="@string/add_to_my_books_msg"
                            android:textAllCaps="false"
                            android:textColor="@color/main_book_text"
                            app:backgroundTint="@color/add_button" />

                        <!--TODO: improve this -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/main_reviews_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/main_download_btn"
                            android:layout_marginEnd="20dp"
                            android:text="@string/load_reviews_msg"
                            android:textAllCaps="false"
                            android:textColor="@color/main_book_text"
                            app:backgroundTint="@color/add_button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/main_remove_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:text="@string/remove_from_my_books_msg"
                            android:textAllCaps="false"
                            android:textColor="@color/main_book_text"
                            android:visibility="invisible"
                            app:backgroundTint="@color/remove_button" />
                    </RelativeLayout>
                </LinearLayout>
        </LinearLayout>
            <TextView
                android:id="@+id/main_book_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:maxLines="14"
                tools:text="@string/desc_sample"
                android:textColor="@color/main_book_text"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>